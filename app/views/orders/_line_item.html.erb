<% @ordered_products.each do |item| %>
<tr>
  <td>
    <%= image_tag item.image.tiny %>
  </td>
  <td>
    <h4><%= item.name %></h4>
    <br>
    <p><%= item.description %></p>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol item.price_cents / 100.0.to_f %>
  </td>
</tr>
<% end %>
